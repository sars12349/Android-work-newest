<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding">

        <TextView
            android:id="@+id/m0501_t001"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/fontsize"
            android:text="@string/m0501_t001"
            android:textColor="@color/Blue"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/m0501_s001"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/m0501_a001" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding">

        <TextView
            android:id="@+id/m0501_t002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/fontsize"
            android:text="@string/m0501_t002"
            android:textColor="@color/Blue"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/m0501_e001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:ems="10"
            android:hint="@string/nospace"
            android:inputType="numberDecimal"
            android:textAlignment="viewEnd"
            android:textColor="@color/Blue"
            android:textSize="24sp" />
    </TableRow>

    <Button
        android:id="@+id/m0501_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding"
        android:background="@color/Yellow"
        android:text="@string/m0501_b001"
        android:textColor="@color/Red"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/m0501_t003"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding"
        android:text="@string/m0501_t003"
        android:textColor="@color/Red"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/m0501_f000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding"
        android:text="@string/m0501_f000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/MyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top"
        android:text="@string/MyName"
        android:textAlignment="viewEnd"
        android:textColor="@color/Teal"
        android:textSize="24sp"
        android:textStyle="bold" />
</LinearLayout>