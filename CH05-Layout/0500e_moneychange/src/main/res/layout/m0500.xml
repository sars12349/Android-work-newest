<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Lime"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding">

        <TextView
            android:id="@+id/m0500_t001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text="@string/m0500_t001"
            android:textColor="@color/Blue"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/m0500_e001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint"
            android:inputType="numberDecimal"
            android:text="@string/zero"
            android:textAlignment="viewEnd"
            android:textSize="24sp" />

    </TableRow>

    <Button
        android:id="@+id/m0500_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top"
        android:background="@color/Blue"
        android:text="@string/m0500_b001"
        android:textColor="@color/Yellow"
        android:textSize="24sp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding">

        <TextView
            android:id="@+id/m0500_t002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m0500_t002"
            android:textColor="@color/Blue"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/m0500_t003"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:textAlignment="viewEnd"
            android:textColor="@color/Black"
            android:textSize="24sp" />

    </TableRow>

    <TextView
        android:id="@+id/myname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding"
        android:text="@string/myname"
        android:textAlignment="viewEnd"
        android:textColor="@color/Black"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>