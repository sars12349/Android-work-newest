<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Silver"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tw.tcnr21.m1405.M1405">


    <TextView
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtName"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:text="@string/tv001"/>

    <EditText
        android:id="@+id/edtName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/TextView1"
        android:background="@color/White"
        android:hint="@string/m1405_insert"
        android:inputType=""
        android:autofillHints="" tools:targetApi="o" />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtGrp"
        android:layout_below="@+id/edtName"
        android:layout_marginTop="5dp"
        android:text="@string/tv002"/>

    <EditText
        android:id="@+id/edtGrp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtName"
        android:layout_toEndOf="@+id/TextView2"
        android:autofillHints=""
        android:background="@color/White"
        android:hint="@string/m1405_insert"
        android:inputType=""
        tools:targetApi="o" />

    <TextView
        android:id="@+id/TextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtAddr"
        android:layout_below="@+id/edtGrp"
        android:layout_marginTop="5dp"
        android:text="@string/tv003"/>

    <EditText
        android:id="@+id/edtAddr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtGrp"
        android:layout_toEndOf="@+id/TextView3"
        android:background="@color/White"
        android:hint="@string/m1405_insert"
        android:inputType=""
        android:autofillHints="" tools:targetApi="o"/>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtAddr"
        android:layout_marginStart="24dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/btnadd"/>

    <TextView
        android:id="@+id/count_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:text="@string/count_t"/>
</RelativeLayout>
