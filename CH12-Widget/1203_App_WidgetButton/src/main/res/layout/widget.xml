<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Silver"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/m1203_img001"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/m1203_des01"
        android:src="@drawable/m1200" />

    <TextView
        android:id="@+id/m1203_c001"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/m1203_c001"
        android:textColor="@color/Red"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/m1203_b001"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/m1203_b001"
        android:textSize="18sp" />
</LinearLayout>