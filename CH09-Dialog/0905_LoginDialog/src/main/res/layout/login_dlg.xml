<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@color/Silver"
    android:orientation="vertical"
    android:padding="@dimen/Spacing">

    <TextView
        android:id="@+id/m0905_t001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/m0905_t001"
        android:textColor="@color/Navy"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/m0905_t001"
        android:hint="@string/m0905_t001"
        android:inputType="text"
        android:labelFor="@+id/RelativeLayout1"
        android:text="" />

    <TextView
        android:id="@+id/m0905_t002"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtUserName"
        android:text="@string/m0905_t002"
        android:textColor="@color/Navy"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/m0905_t002"
        android:hint="@string/m0905_t002"
        android:inputType="textPassword"
        android:labelFor="@id/m0905_t002"
        android:text="" />

    <Button
        android:id="@+id/m0905_btnOK"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtPassword"
        android:hint="@string/login"
        android:text="@string/m0905_btnOK" />

    <Button
        android:id="@+id/m0905_btnCancel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/m0905_btnOK"
        android:layout_alignTop="@+id/m0905_btnOK"
        android:layout_toEndOf="@+id/m0905_btnOK"
        android:text="@string/m0905_btnCancel" />

</RelativeLayout>
