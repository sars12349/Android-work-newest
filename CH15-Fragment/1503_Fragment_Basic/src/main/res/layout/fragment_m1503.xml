<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Silver"
    tools:context="tw.tcnr21.m1503.M1503Fragment"
    tools:showIn="@layout/m1503">


    <TextView
        android:id="@+id/m1503_t001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="31dp"
        android:text="@string/m1503_t001"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@color/Blue" />

    <TextView
        android:id="@+id/m1503_t002"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/m1503_t001"
        android:layout_below="@+id/m1503_t001"
        android:layout_marginTop="25dp"
        android:text="@string/m1503_t002"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@color/Blue" />

    <EditText
        android:id="@+id/txtHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/m1503_t001"
        android:layout_alignBottom="@+id/m1503_t001"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/m1503_t001"
        android:ems="10"
        android:hint="@string/hint"
        android:inputType="number"
        android:textAlignment="textEnd"
        android:importantForAutofill="no" tools:targetApi="o"/>

    <EditText
        android:id="@+id/txtWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/m1503_t002"
        android:layout_alignBottom="@+id/m1503_t002"
        android:layout_alignStart="@+id/txtHeight"
        android:ems="10"
        android:hint="@string/hint"
        android:inputType="number"
        android:textAlignment="textEnd"
        android:importantForAutofill="no" tools:targetApi="o"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtWeight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/btn_default"
        android:text="@string/m1503_b001"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:id="@+id/lblOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/m1503_t002"
        android:layout_below="@+id/button"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        android:paddingStart="20dp"
        android:paddingEnd="15dp"
        android:text="@string/yourbmi"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="?attr/colorPrimaryDark"/>
</RelativeLayout>