<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".M0803" android:orientation="vertical" android:padding="@dimen/padding"
        android:background="@color/Sliver">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/m0803_t001"
            android:id="@+id/m0803_t001" android:background="@color/Aqua"/>

    <ProgressBar
        android:id="@+id/m0803_p001"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/Aqua"
        android:max="100"
        android:progress="30"
        android:progressTint="@color/Water"
        android:secondaryProgress="50"
        android:secondaryProgressTint="@color/Sliver" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/m0803_t002"
            android:id="@+id/m0803_t002" android:layout_marginTop="@dimen/item_distance"
            android:background="@color/gold"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/m0803_p002"
            android:visibility="invisible"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/m0803_t003"
            android:id="@+id/m0803_t003"
            android:layout_marginTop="@dimen/item_distance"
            android:background="@color/Aqua"/>
    <ProgressBar
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/m0803_p003"
            android:visibility="invisible"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/m0803_t004"
            android:id="@+id/m0803_t004"
            android:layout_marginTop="@dimen/item_distance"
            android:background="@color/gold"/>
    <ProgressBar
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/m0803_p004"
            android:visibility="invisible"/>
    <Button
            android:text="@string/m0803_b001_status_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/m0803_b001"
            android:layout_marginTop="@dimen/margin"/>

</LinearLayout>