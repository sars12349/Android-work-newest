<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/Margins"
    tools:context=".M0803">

    <TextView
        android:id="@+id/m0803_t001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Aqua"
        android:text="@string/m0803_t001"
        android:textColor="@color/Navy"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/m0803_p001"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Aqua"
        android:max="100"
        android:progress="30"
        android:progressTint="@color/Red"
        android:secondaryProgressTint="@color/Maroon" />
    />

    <TextView
        android:id="@+id/m0803_t002"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pa01"
        android:background="@color/Aqua"
        android:text="@string/m0803_t002"
        android:textColor="@color/Navy"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/m0803_p002"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Aqua" />

    <TextView
        android:id="@+id/m0803_t003"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pa01"
        android:background="@color/Aqua"
        android:text="@string/m0803_t003"
        android:textColor="@color/Navy"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/m0803_p003"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Aqua" />

    <TextView
        android:id="@+id/m0803_t004"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pa01"
        android:background="@color/Aqua"
        android:text="@string/m0803_t004"
        android:textColor="@color/Navy"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/m0803_p004"
        style="@android:style/Widget.DeviceDefault.ProgressBar.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Aqua" />

    <Button
        android:id="@+id/m0603_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fontsize"
        android:text="@string/m0803_b001" />

    <TextView
        android:id="@+id/myname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fontsize"
        android:text="@string/myname"
        android:textAlignment="textEnd"
        android:textColor="@color/Blue"
        android:textSize="24sp" />

</LinearLayout>