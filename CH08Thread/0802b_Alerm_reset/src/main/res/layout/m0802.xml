<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray"
    android:padding="@dimen/fontsize"
    tools:context=".M0802">

    <TextView
        android:id="@+id/m0802_ans01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/result"
        android:textColor="@color/Blue"
        android:textSize="20sp"
        android:textStyle="bold" />

    <DatePicker
        android:id="@+id/m0802_date01"
        style="@style/MyDatePicker"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:layout_below="@+id/m0802_ans01"
        android:layout_marginTop="6dp"
        android:ems="10"
        android:inputType="date" />

    <TimePicker
        android:id="@+id/m0802_time01"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:layout_below="@+id/m0802_date01"
        android:layout_marginTop="6dp"
        android:timePickerMode="spinner" />

    <Button
        android:id="@+id/m0802_b002"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m0802_time01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@color/Yellow"
        android:text="@string/m0802_b002"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/m0802_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m0802_time01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@color/Yellow"
        android:text="@string/promptBtnOK"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/myname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:text="@string/myname"
        android:textColor="@color/Navy"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/m0802_t001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:text="@string/m0802_t001"
        android:textColor="@color/Blue"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/m0802_timer"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/m0802_t001"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@color/Yellow"
        android:text="@string/m0802_timer"
        android:textAlignment="center"
        android:textColor="@color/Red"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>