<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray"
    android:orientation="vertical"
    android:padding="@dimen/pa01">

    <Button
        android:id="@+id/m1101_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/m1101_b001"
        android:textSize="18sp" />

    <Button
        android:id="@+id/m1101_b002"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/m1101_b002"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/m1101_b003"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/m1101_b003"
        android:textSize="18sp" />

    <Button
        android:id="@+id/m1101_b004"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/m1101_b004"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/myname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Margins"
        android:gravity="end"
        android:text="@string/myname"
        android:textColor="@color/Blue"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>
