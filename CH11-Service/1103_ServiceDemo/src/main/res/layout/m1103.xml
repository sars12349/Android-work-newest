<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray"
    android:orientation="vertical"
    android:padding="@dimen/pa01">

    <Button
        android:id="@+id/m1103_btnStartMyService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_default"
        android:text="@string/m1103_b001"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/m1103_btnStopMyService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_default"
        android:text="@string/m1103_b002"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/m1103_btnBindMyService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_default"
        android:text="@string/m1103_b003"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/m1103_btnUnbindMyService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_default"
        android:text="@string/m1103_b004"
        android:textSize="18sp" />

    <Button
        android:id="@+id/m1103_btnCallMyServiceMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_default"
        android:text="@string/m1103_b005"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/myname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Margins"
        android:gravity="end"
        android:text="@string/myname"
        android:textColor="@color/Blue"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>